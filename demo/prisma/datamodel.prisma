type Batch @db(name: "batches") {
  id: Int! @id(strategy: SEQUENCE) @sequence(name: "batches_id_seq", initialValue: 1, allocationSize: 1)
  name: String
  tasks: [Task]
}

type Task @db(name: "tasks") {
  id: Int! @id(strategy: SEQUENCE) @sequence(name: "tasks_id_seq", initialValue: 1, allocationSize: 1)
  batch: Batch @db(name: "batch_id")
  isCompleted: Boolean! @default(value: false)
  name: String
}